<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:ignore="HardcodedText">

    <!-- Buttons -->

    <RadioGroup android:id="@+id/news_fragment_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/news_fragment_button_simple">

        <!-- Simple -->

        <RadioButton
                android:id="@id/news_fragment_button_simple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simple"/>

        <!-- Incremental -->

        <RadioButton
                android:id="@+id/news_fragment_button_incremental"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incremental"/>

    </RadioGroup>

    <!-- Data layout -->

    <com.nextfaze.databind.widget.DataLayout
            android:id="@+id/news_fragment_data_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:contentView="@+id/news_fragment_list"
            app:emptyView="@+id/news_fragment_empty"
            app:loadingView="@+id/news_fragment_loading"
            app:errorView="@+id/news_fragment_error">

        <!-- List -->

        <ListView
                android:id="@+id/news_fragment_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <!-- Empty -->

        <TextView
                android:id="@+id/news_fragment_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="No news today!"
                tools:ignore="HardcodedText"/>

        <!-- Loading -->

        <ProgressBar
                style="@android:style/Widget.Holo.ProgressBar"
                android:id="@+id/news_fragment_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

        <!-- Error -->

        <TextView
                android:id="@+id/news_fragment_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#ffff0000"
                android:textStyle="italic"/>

    </com.nextfaze.databind.widget.DataLayout>

</LinearLayout>
